<?xml version="1.0" encoding="UTF-8"?>
<forms xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-form.xsd">
    <form name="Query" type="single" target="queryKnowledgeBase">
        <field name="queryString"><textarea rows="20"/></field>
        <field name="searchButton" title="${uiLabelMap.CommonQuery}" widget-style="smallSubmit"><submit button-type="button" image-location="/images/icons/magnifier.png"/></field>
    </form>
    <form name="QueryResult" type="single">
        <field name="queryResult"><textarea default-value="${parameters.queryResult}" rows="20" read-only="true"/></field>
    </form>
</forms>
